---
import { Image } from "astro:assets";
const { message, dir } = Astro.props
import Badges from '../../assets/images/Badges.png'

interface ImageProps {
  src: string;
  alt: string;
  class: string;
}

const imageProps: ImageProps = {
    src: Badges.src,
    alt: 'badges',
    class: 'h-24 mx-auto',
  };
---

<div
    id="container"
    class="border-dashed border-4 border-black w-full sm:w-[700px] pr-[10px] pl-[5px] leading-0 md:py-2 md:pl-1 justify-self-center mx-auto flex flex-col gap-1"
>
    <h1
        lang="ar"
        dir={dir}
        id="message"
        class="text-2xl md:text-2xl font-black leading-[48px] text-center"
    >
        {message}
    </h1>
    <Image src={Badges} alt="badges" class="h-24 w-fit mx-auto" />
</div>


<style>
    * {
        font-family: 'TheSans';
    }
</style>