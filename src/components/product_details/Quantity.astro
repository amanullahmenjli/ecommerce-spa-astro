<td class="row-auto">
    <div class="form-row justify-content-center">
      <div class="form-group mb-0">
        <div class="input-group mx-auto mb-0">
          <div class="number-input h-[50px] border-none">
            
            <input class="quantity bg-light text-sm border-gray-300 border-solid border-1 border-r-0" min="0" placeholder="0" name="QuantitÃ©" id="quantity" value="1" type="number">

            <div class="flex flex-col text-gray-500 ">
                <input class="text-base bg-white border-gray-300 border-solid border-1 border-b-0 px-2 cursor-pointer" type='button' onclick="plus()" value="+" id="+"></input   > 
                <input class="h-full leading-[0px] py-0 bg-white border-gray-300 border-solid border-1 text-xl px-2 cursor-pointer" type='button' disabled onclick="minus()" value="-" id="-"></input > 
            </div>
          </div>
        </div>
      </div>
    </div> 
</td>


<script is:inline>
    function plus() {
        document.getElementById('quantity').value = parseInt(document.getElementById('quantity').value) + 1;
        document.getElementById('-').disabled = false;
        document.getElementById('final_price').innerHTML = parseInt(document.getElementById('initial_price').value) * parseInt(document.getElementById('quantity').value) + ' DT';
        document.getElementById('old_price').innerHTML = parseInt(document.getElementById('initial_price').value) * 2 * parseInt(document.getElementById('quantity').value) + ' DT';
    }

    function minus() {
        document.getElementById('quantity').value = parseInt(document.getElementById('quantity').value) - 1;
        (document.getElementById('quantity').value) <= 1 ? document.getElementById('-').disabled = true : document.getElementById('-').disabled = false;
        document.getElementById('final_price').innerHTML = parseInt(document.getElementById('initial_price').value) * parseInt(document.getElementById('quantity').value) + ' DT';
        document.getElementById('old_price').innerHTML = parseInt(document.getElementById('initial_price').value) * 2 * parseInt(document.getElementById('quantity').value) + ' DT';
    }
</script>


