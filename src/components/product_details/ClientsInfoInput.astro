    <div class="flex flex-row gap-3">
        <!-- * Customized Inputs -->
        <CustomInput name="Prénom" ></CustomInput>
        <CustomInput name="Nom de famille"></CustomInput>
    </div>
    
    <!-- * Row Layout -->
    <div class="flex flex-row gap-3">
        <!-- * Customized Inputs -->
        <CustomInput name="Numéro de téléphone" required={true}></CustomInput>
        <CustomInput name="Adresse de livraison"></CustomInput>
    </div>
</div>