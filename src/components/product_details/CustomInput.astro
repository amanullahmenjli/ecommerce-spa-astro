---
import { Input } from "@nextui-org/react";
const  { name, required } = Astro.props;

---

<Input client:load size='sm'
       label={name}
       name={name}
       {required}
       variant='bordered'
       color="primary" 
       radius='sm'  
       className="bg-white text-black rounded-lg"
       classNames={{label: "text-black"}}>
</Input>
