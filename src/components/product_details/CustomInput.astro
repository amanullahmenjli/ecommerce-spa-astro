---
import { Input } from "@nextui-org/react";
let  { name, required } = Astro.props;

if (typeof(required) != "boolean"){
       required = false;
}
---

<Input client:load size='sm'
       label={name}
       name={name}
       isRequired={required}
       variant='bordered'
       color="primary" 
       radius='sm'  
       className="bg-white text-black rounded-lg"
       classNames={{label: "text-black"}}>
</Input>
